<html>
<head>
    <%= stylesheet_link_tag 'style' %>
    <title>Milloin viimeeX</title>
</head>
<body>
    <header>
    <% if session[:user_id]%>
	<div id = "status">
        You are logged in <%= link_to 'Logout', :session, :method => :delete %>
	</div>
    <% end %>
    </header>
    
	<div id = "content">

	<% if flash[:warning] or flash[:notice] %>
		<div id = "notifications">
	<% end %>
	
    <% if flash[:warning] %>
    	<section class="warning"><%= flash[:warning]%></section>
    <% end %>
    <% if flash[:notice] %>
    	<section class="notice"><%= flash[:notice]%></section>
    <% end %>
	<% if flash[:warning] or flash[:notice] %>
		</div>
	<% end %>

		<%= yield %>
	</div>
	<div id = "footer">
		Team Milloinviimeks, 2010
	</div>
</body>
</html>